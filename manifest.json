{
  "name": "enhanced-dxt-file-manager",
  "version": "1.0.0",
  "description": "Enhanced DXT File Manager with Gradio UI and MCP server capabilities",
  "type": "mcp-server",
  "author": {
    "name": "CompactMind Development Team",
    "email": "dev@compactmind.com",
    "url": "https://github.com/compactmind/test"
  },
  "license": "MIT",
  "homepage": "https://github.com/compactmind/test",
  "repository": {
    "type": "git",
    "url": "https://github.com/compactmind/test.git"
  },
  "bugs": {
    "url": "https://github.com/compactmind/test/issues"
  },
  "keywords": ["file-manager", "mcp", "gradio", "dxt", "overlay", "ui"],
  "main": "server/main.py",
  "scripts": {
    "start": "python server/main.py",
    "install": "./install.sh",
    "test": "python -m pytest tests/"
  },
  "requirements": {
    "python": ">=3.8",
    "gradio": ">=4.0.0",
    "mcp": ">=0.1.0"
  },
  "dependencies": [
    "gradio>=4.0.0",
    "mcp>=0.1.0",
    "pathlib",
    "hashlib",
    "shutil",
    "asyncio",
    "dataclasses",
    "typing",
    "mimetypes",
    "tempfile",
    "uuid"
  ],
  "runtime": {
    "python": ">=3.8",
    "node": ">=16.0.0"
  },
  "assets": {
    "icon": "assets/icon.png",
    "banner": "assets/banner.png",
    "screenshot": "assets/screenshot.png",
    "logo": "assets/logo.svg"
  },
  "maintainers": [
    {
      "name": "CompactMind Team",
      "email": "team@compactmind.com",
      "role": "maintainer"
    }
  ],
  "_enhanced": true,
  "_enhanced_version": "2.0.0",
  "_store_compatible": true,
  "dualUI": {
    "enabled": true,
    "overlaySupport": true,
    "hotkey": "Ctrl+Shift+F",
    "webPort": 7860,
    "mcpEndpoint": "/gradio_api/mcp/sse",
    "theme": {
      "default": "system",
      "options": ["light", "dark", "system"],
      "customizable": true
    },
    "responsive": true,
    "accessibility": {
      "keyboard": true,
      "screenReader": true,
      "highContrast": true
    },
    "features": {
      "dragDrop": true,
      "contextMenu": true,
      "filePreview": true,
      "bulkOperations": true,
      "realTimeUpdates": true,
      "searchHighlight": true
    }
  },
  "capabilities": {
    "fileSystem": {
      "read": true,
      "write": true,
      "delete": true,
      "create": true,
      "move": true,
      "copy": true,
      "search": true,
      "metadata": true,
      "permissions": true,
      "checksums": true,
      "backup": true
    },
    "network": {
      "http": true,
      "websocket": true,
      "cors": true,
      "ssl": false
    },
    "system": {
      "processManagement": false,
      "environmentAccess": true,
      "logging": true,
      "configuration": true,
      "monitoring": true
    },
    "ui": {
      "gradio": true,
      "overlay": true,
      "hotkeys": true,
      "themes": true,
      "responsive": true,
      "accessibility": true
    },
    "integration": {
      "mcp": true,
      "mcpStreaming": true,
      "overlaySystem": true,
      "chatAgent": true,
      "realTimeSync": true
    }
  },
  "configuration": {
    "workspace_dir": {
      "type": "string",
      "default": ".",
      "description": "Working directory for file operations",
      "required": true,
      "validation": "directory"
    },
    "debug_mode": {
      "type": "boolean",
      "default": false,
      "description": "Enable debug logging and verbose output"
    },
    "max_file_size": {
      "type": "integer",
      "default": 10485760,
      "description": "Maximum file size in bytes (10MB default)",
      "min": 1024,
      "max": 104857600
    },
    "log_level": {
      "type": "string",
      "default": "INFO",
      "description": "Logging level",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR"]
    },
    "theme": {
      "type": "string",
      "default": "system",
      "description": "UI theme preference",
      "enum": ["light", "dark", "system"]
    },
    "show_hidden_files": {
      "type": "boolean",
      "default": false,
      "description": "Show hidden files and directories by default"
    },
    "enable_checksums": {
      "type": "boolean",
      "default": true,
      "description": "Calculate and display file checksums"
    },
    "auto_backup": {
      "type": "boolean",
      "default": true,
      "description": "Automatically backup files before modification"
    },
    "ui_port": {
      "type": "integer",
      "default": 7860,
      "description": "Port for the Gradio web interface",
      "min": 1024,
      "max": 65535
    }
  },
  "security": {
    "sandboxing": {
      "enabled": true,
      "description": "All file operations are sandboxed to the workspace directory"
    },
    "capabilities": {
      "enforced": true,
      "description": "Capability-based security model enforced"
    },
    "validation": {
      "pathValidation": true,
      "inputSanitization": true,
      "sizeChecks": true,
      "typeChecking": true
    },
    "audit": {
      "enabled": true,
      "logLevel": "INFO",
      "description": "All file operations are logged for audit purposes"
    }
  },
  "store": {
    "category": "file-management",
    "subcategory": "utilities",
    "tags": ["file-manager", "productivity", "development", "gradio", "mcp"],
    "maturity": "stable",
    "pricing": {
      "model": "free",
      "cost": 0
    },
    "support": {
      "documentation": "README.md",
      "issues": "https://github.com/compactmind/test/issues",
      "community": "https://discord.gg/compactmind"
    },
    "compatibility": {
      "platforms": ["windows", "macos", "linux"],
      "architectures": ["x86_64", "arm64"],
      "containers": ["docker", "podman"]
    },
    "performance": {
      "memory": "< 100MB",
      "cpu": "< 5%",
      "disk": "< 10MB",
      "network": "< 1MB/s"
    },
    "dependencies": {
      "system": ["python>=3.8"],
      "python": ["gradio>=4.0.0", "mcp>=0.1.0"],
      "optional": ["docker"]
    }
  },
  "gradio": {
    "version": "4.0.0",
    "interface": "blocks",
    "mcp_server": true,
    "endpoint": "/gradio_api/mcp/sse",
    "features": {
      "tabs": true,
      "fileOperations": true,
      "search": true,
      "configuration": true,
      "realTimeUpdates": true,
      "streaming": true
    },
    "themes": {
      "default": "soft",
      "customizable": true,
      "responsive": true
    },
    "accessibility": {
      "keyboard": true,
      "screenReader": true,
      "highContrast": true
    }
  },
  "mcp": {
    "protocol": "sse",
    "endpoint": "/gradio_api/mcp/sse",
    "streaming": true,
    "tools": [
      {
        "name": "list_files",
        "description": "List files and directories in the specified directory",
        "parameters": ["directory", "show_hidden", "file_type"]
      },
      {
        "name": "read_file",
        "description": "Read the contents of a file",
        "parameters": ["file_path", "encoding"]
      },
      {
        "name": "write_file",
        "description": "Write content to a file",
        "parameters": ["file_path", "content", "encoding", "create_backup"]
      },
      {
        "name": "delete_file",
        "description": "Delete a file or directory",
        "parameters": ["file_path", "create_backup"]
      },
      {
        "name": "copy_file",
        "description": "Copy a file or directory",
        "parameters": ["source_path", "destination_path", "overwrite"]
      },
      {
        "name": "move_file",
        "description": "Move a file or directory",
        "parameters": ["source_path", "destination_path", "overwrite"]
      },
      {
        "name": "create_directory",
        "description": "Create a new directory",
        "parameters": ["directory_path", "create_parents"]
      },
      {
        "name": "search_files",
        "description": "Search for files by name and optionally content",
        "parameters": ["query", "directory", "search_content", "file_extensions"]
      },
      {
        "name": "get_file_info",
        "description": "Get detailed information about a file or directory",
        "parameters": ["file_path"]
      },
      {
        "name": "get_config",
        "description": "Get current configuration settings",
        "parameters": []
      },
      {
        "name": "update_config",
        "description": "Update configuration settings",
        "parameters": ["workspace_dir", "debug_mode", "max_file_size", "log_level", "theme", "show_hidden_files", "enable_checksums", "auto_backup"]
      }
    ]
  },
  "overlay": {
    "compatible": true,
    "hotkey": "Ctrl+Shift+F",
    "position": "center",
    "size": {
      "width": 900,
      "height": 700,
      "resizable": true
    },
    "features": {
      "draggable": true,
      "resizable": true,
      "minimizable": true,
      "closable": true,
      "alwaysOnTop": false
    },
    "integration": {
      "chatAgent": true,
      "streaming": true,
      "contextAware": true,
      "realTimeSync": true
    }
  },
  "installation": {
    "method": "script",
    "script": "install.sh",
    "requirements": ["python>=3.8", "pip"],
    "steps": [
      "Check Python version",
      "Install Python dependencies",
      "Create workspace directory",
      "Configure system integration",
      "Verify installation"
    ],
    "postInstall": {
      "commands": ["python server/main.py --help"],
      "verification": "curl -s http://localhost:7860/gradio_api/mcp/sse"
    }
  },
  "usage": {
    "web": "http://localhost:7860",
    "mcp": "http://localhost:7860/gradio_api/mcp/sse",
    "cli": "python server/main.py --help",
    "examples": [
      {
        "name": "Basic usage",
        "command": "python server/main.py --workspace /path/to/workspace"
      },
      {
        "name": "Debug mode",
        "command": "python server/main.py --debug --log-level DEBUG"
      },
      {
        "name": "Custom port",
        "command": "python server/main.py --port 8080"
      },
      {
        "name": "Shared access",
        "command": "python server/main.py --share"
      }
    ]
  },
  "testing": {
    "unit": "pytest tests/",
    "integration": "pytest tests/integration/",
    "coverage": "pytest --cov=server tests/",
    "performance": "pytest tests/performance/"
  },
  "monitoring": {
    "healthCheck": "/health",
    "metrics": "/metrics",
    "logs": "file_manager.log"
  }
}
